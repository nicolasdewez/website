<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Nicolas Dewez - Admin{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bootstrap-3.3.7/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('app/admin.css') }}">
    {% endblock %}

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body class="root">
{{ render(controller('AppBundle:Security:userBar')) }}

<header class="header">
    {{ include('admin/common/header.html.twig') }}
</header>

<nav class="menu navbar navbar-default">
    <div class="container-fluid">
        {{ include('admin/common/menu.html.twig') }}
    </div>
</nav>

<div class="body">

    {% block breadcrumb %}{% endblock %}

    <div class="flash">
        {{ include('common/flash.html.twig') }}
    </div>

    {% block body %}{% endblock %}
</div>
</body>

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('jquery-3.1.1/jquery-3.1.1.min.js') }}" ></script>
    <script type="text/javascript" src="{{ asset('bootstrap-3.3.7/js/bootstrap.min.js') }}" ></script>
{% endblock %}
</html>
