    <h2>Créer un devis</h2>

    {{ form(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(function() {
            new EstimateEdit(
                $('.collection'),
                'estimate_lines',
